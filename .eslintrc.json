{
    "plugins": [
        "ejs"
    ],
    "env": {
        "browser": true,
        "es2022": true,
        "node": true
    },
    "extends": [
        "prettier",
        "eslint:recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "rules": {
        "no-console": [
            "error",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "no-use-before-define": "error",
        "func-names": [
            "error",
            "always"
        ],
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "prefer-destructuring": [
            "error",
            {
                "object": true,
                "array": false
            }
        ],
        "no-tabs": [
            "error",
            {
                "allowIndentationTabs": true
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 2,
                "maxEOF": 0
            }
        ],
        "camelcase": "warn",
        "no-undef": "error",
        "no-unused-vars": "error",
        "prefer-const": "error"
    },
    "parserOptions": {
        "sourceType": "module"
    }
}
