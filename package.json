{
  "name": "bundler",
  "version": "1.1.0",
  "scripts": {
    "dev": "webpack serve -c config/dev.js",
    "build": "webpack -c config/build.js",
    "prod": "webpack -c config/prod.js",
    "watch": "webpack --watch -c config/dev.js",
    "es-lint:fix": "eslint ./src --fix --max-warnings=0 --color",
    "prettier:fix": "prettier ./src/**/*.{html,ejs,scss,js} --write",
    "stylelint:fix": "stylelint ./src/**/*.{scss} --fix",
    "prepare": "husky install & npm run pre-commit",
    "pre-commit": "npx husky add .husky/pre-commit \"npx lint-staged\""
  },
  "lint-staged": {
    "**/*.{html,ejs,scss}": [
      "prettier --write --ignore-unknown"
    ],
    "**/*.js": [
      "eslint --fix --color",
      "prettier --write --ignore-unknown"
    ],
    "**/*.scss": [
      "stylelint --fix --color"
    ]
  },
  "browserslist": [
    "last 3 version",
    "> 1%",
    "not IE >= 0"
  ],
  "sideEffects": [
    "*.js",
    "*.css",
    "*.scss",
    "*.html"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tigranmogrov/bundler.git"
  },
  "author": "Tigran Mogrov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tigranmogrov/bundler/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.18.6",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-ejs": "^0.0.2",
    "fs": "^0.0.2",
    "html-loader": "^4.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^15.2.0",
    "mini-css-extract-plugin": "^2.6.1",
    "path": "^0.12.7",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.0.0",
    "postcss-normalize-charset": "^6.0.1",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.1.1",
    "prettier-plugin-ejs": "^0.0.18",
    "sass": "^1.53.0",
    "sass-loader": "^13.0.2",
    "stylelint": "^16.0.2",
    "stylelint-config-standard-scss": "^12.0.0",
    "stylelint-order": "^6.0.4",
    "template-ejs-loader": "^0.9.4",
    "terser-webpack-plugin": "^5.3.3",
    "uglify-js": "^3.16.2",
    "webpack": "^5.73.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.9.3",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "include-media": "^2.0.0"
  }
}
